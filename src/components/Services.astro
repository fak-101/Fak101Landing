---
import { getTranslations, t } from '../utils/i18n';

const lang = Astro.params?.lang ?? 'en';
const translations = await getTranslations(Astro, lang);
// Extract number and label from a badge like "[02 Services]" or "[02 Servicios]"
const badgeRaw: string = t(translations, 'services.badge');
const badgeMatch = badgeRaw.match(/^\[(\d+)\s+(.+)\]$/);
const badgeNum = badgeMatch?.[1] ?? '02';
const badgeLabel = badgeMatch?.[2] ?? t(translations, 'header.services');

// Create services array
const services = [
  {
    num: t(translations, 'services.card.num'),
    title: t(translations, 'services.card.title'),
    desc: t(translations, 'services.card.desc'),
    isDark: false,
  },
  {
    num: t(translations, 'services.card2.num'),
    title: t(translations, 'services.card2.title'),
    desc: t(translations, 'services.card2.desc'),
    isDark: false,
  },
  {
    num: t(translations, 'services.card3.num'),
    title: t(translations, 'services.card3.title'),
    desc: t(translations, 'services.card3.desc'),
    isDark: false,
  },
  {
    num: t(translations, 'services.cta.num'),
    title: t(translations, 'services.cta.title'),
    desc: t(translations, 'services.cta.desc'),
    isDark: true,
  },
];
---
<section id="services">
  <div class="mx-auto max-w-7xl px-6 py-16 lg:px-8">
    <div class="grid grid-cols-1 items-stretch gap-8 lg:grid-cols-2">
      <div class="lg:sticky lg:top-24 lg:self-start">
        <div class="mb-6" data-animate="fadeInDown">
          <span class="text-lg font-semibold tracking-wide text-gray-900" style="font-family: var(--font-mono-numbers);">[<span class="num">{badgeNum}</span> {badgeLabel}]</span>
        </div>
        <div data-animate="fadeInLeft">
          <h2 class="text-5xl font-extrabold leading-tight tracking-tight text-gray-900 sm:text-6xl md:text-7xl">
            {t(translations, 'services.title')}
          </h2>
        </div>
      </div>
      <div class="relative">
        {
          services.map((service, index) => {
            const top = 98 + index * 80;
            return (
              <div
                style={`top: ${top}px;`}
                class={`sticky mb-12 rounded-2xl p-8 lg:p-10 hover-lift ${service.isDark ? 'bg-black hover-glow' : 'bg-white'}`}
              >
                <div class="flex items-start gap-6">
                  <span class={`num text-4xl font-semibold ${service.isDark ? 'text-white/70' : 'text-gray-400'}`}>
                    {service.num}
                  </span>
                  <h3 class={`text-2xl font-bold ${service.isDark ? 'text-white' : 'text-gray-900'}`}>
                    {service.title}
                  </h3>
                </div>
                <p class={`mt-6 text-sm leading-6 lg:text-base ${service.isDark ? 'text-white/70' : 'text-gray-500'}`}>
                  {service.desc}
                </p>
              </div>
            );
          })
        }
      </div>
    </div>
  </div>
</section>
