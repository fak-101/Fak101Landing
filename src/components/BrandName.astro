---
import { getTranslations, t } from '../utils/i18n';

const lang = Astro.params?.lang ?? 'en';
const translations = await getTranslations(Astro, lang);
---

<div class="text-right leading-none mx-auto w-fit">
  <div class="fak-title-header text-7xl sm:text-8xl md:text-9xl">FAK</div>
  <div class="num text-7xl sm:text-8xl md:text-9xl">â€¢101</div>
</div>

<section class="mt-10 w-full">
  <div class="mx-auto max-w-6xl px-4">
    <div class="grid gap-8 md:grid-cols-2 md:items-center">
      <!-- Blurb -->
      <div class="order-1 md:order-2 text-gray-700 leading-relaxed">
        {t(translations, 'brand.blurb')}
      </div>

      <!-- Stats -->
      <div class="order-2 md:order-1 grid grid-cols-1 gap-6 sm:grid-cols-3">
        <div class="flex items-baseline justify-between sm:block">
          <div class="text-5xl sm:text-4xl font-extrabold tracking-tight">{t(translations, 'brand.stats.projects.value')}</div>
          <div class="ml-4 sm:ml-0 sm:mt-1 text-base sm:text-sm text-gray-600">{t(translations, 'brand.stats.projects.label')}</div>
        </div>
        <div class="flex items-baseline justify-between sm:block">
          <div class="text-5xl sm:text-4xl font-extrabold tracking-tight">{t(translations, 'brand.stats.years.value')}</div>
          <div class="ml-4 sm:ml-0 sm:mt-1 text-base sm:text-sm text-gray-600">{t(translations, 'brand.stats.years.label')}</div>
        </div>
        <div class="flex items-baseline justify-between sm:block">
          <div class="text-5xl sm:text-4xl font-extrabold tracking-tight">{t(translations, 'brand.stats.clients.value')}</div>
          <div class="ml-4 sm:ml-0 sm:mt-1 text-base sm:text-sm text-gray-600">{t(translations, 'brand.stats.clients.label')}</div>
        </div>
      </div>
    </div>
  </div>
</section>

