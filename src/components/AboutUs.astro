    <div class="rounded-2xl bg-black p-8 lg:p-12" data-animate="fadeIn">
      <div class="mb-6" data-animate="fadeInDown">
        <span class="text-lg font-semibold tracking-wide text-white" style="font-family: var(--font-mono-numbers);">[<span class="num">{badgeNum}</span> {badgeLabel}]</span>
      </div>
      <div class="mb-8" data-animate="fadeIn">
        <h2 class="text-4xl md:text-5xl font-extrabold text-white mb-6">
          {t(translations, 'about.title')}
